{
  "name": "@cryptoeconomicslab/eth-contract",
  "version": "0.0.0",
  "description": "eth-contract",
  "author": {
    "name": "Cryptoeconomics Lab",
    "url": "https://www.cryptoeconomicslab.com/"
  },
  "engines": {
    "node": ">=10"
  },
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc --build",
    "build:check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "lint": "eslint --ext ts,tsx src",
    "doc": "typedoc --out docs src",
    "clean": "rm -rf lib docs"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/?(*.)+(spec|test).(ts|js)",
      "**/?(*.)+(spec|test).ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "dependencies": {
    "@cryptoeconomicslab/contract": "^0.0.5",
    "@cryptoeconomicslab/db": "^0.0.5",
    "@cryptoeconomicslab/ovm": "^0.0.5",
    "ethers": "^4.0.43"
  },
  "devDependencies": {
    "@cryptoeconomicslab/primitives": "^0.0.5"
  },
  "peerDependencies": {
    "@cryptoeconomicslab/primitives": "^0.0.5"
  },
  "gitHead": "21764a1554bc98825f094d8ce514e9799a391e5d"
}
